<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="75dp"
        android:text="@string/informar_preco"
        android:textStyle="bold"
        tools:text="Ativo" />

    <EditText
        android:id="@+id/edAtivo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Informe o Preço do Ativo"
        android:inputType="numberDecimal" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/informar_preco"
        android:textStyle="bold"
        tools:text="Lucro liquido" />

    <EditText
        android:id="@+id/edLucro"
        android:layout_width="match_parent"
        android:inputType="numberDecimal"
        android:hint="Informe o Lucro Liquido"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/informar_preco"
        android:textStyle="bold"
        tools:text="Patrimonio liquido" />

    <EditText
        android:id="@+id/edPatrimonio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Informe o Patrimonio liquido"
        android:inputType="numberDecimal" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/informar_preco"
        android:textStyle="bold"
        tools:text="N° de ações na bolsa" />

    <EditText
        android:id="@+id/edBolsa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Informe o numero de ações na bolsa"
        android:inputType="numberDecimal" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/informar_preco"
        android:textStyle="bold"
        tools:text="Preço Atual" />

    <EditText
        android:id="@+id/edAtual"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Informe o Preço atual"
        android:inputType="numberDecimal" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/colorPrimary"
        android:onClick="calcular"
        android:text="Gravar"
        android:textColor="#FFFFFF" />


</LinearLayout>